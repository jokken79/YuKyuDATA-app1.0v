{
  "version": 2,
  "framework": null,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "pip install -r requirements.txt && npm install",
  "env": {
    "PYTHONUNBUFFERED": "1",
    "DEBUG": "@DEBUG",
    "DATABASE_TYPE": "@DATABASE_TYPE",
    "DATABASE_URL": "@DATABASE_URL",
    "CORS_ORIGINS": "@CORS_ORIGINS",
    "JWT_SECRET_KEY": "@JWT_SECRET_KEY",
    "JWT_REFRESH_SECRET_KEY": "@JWT_REFRESH_SECRET_KEY",
    "DATABASE_ENCRYPTION_KEY": "@DATABASE_ENCRYPTION_KEY"
  },
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.12"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/docs",
      "dest": "main.py"
    },
    {
      "src": "/redoc",
      "dest": "main.py"
    },
    {
      "src": "/openapi.json",
      "dest": "main.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "main.py"
    }
  ],
  "functions": {
    "main.py": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "database/**"
    }
  }
}
